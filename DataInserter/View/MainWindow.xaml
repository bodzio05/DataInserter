<Window x:Class="DataInserter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataInserter"
        mc:Ignorable="d"
        xmlns:commands="clr-namespace:DataInserter.ViewModel.Commands"
        xmlns:vm="clr-namespace:DataInserter.ViewModel"
        xmlns:uc="clr-namespace:DataInserter.View.UserControls"
        xmlns:views="clr-namespace:DataInserter.View"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="Data Inserter" Height="450" Width="520" ResizeMode="NoResize">

    <Grid Margin="5">
        <TabControl Grid.Row="0">
            <TabItem Header="Excel Reader" FontSize="14">
                <views:ExcelReaderView/>
            </TabItem>
            
            <TabItem Header="XML Editor" FontSize="14">
                <views:XmlManipulatorView/>
            </TabItem>

            <TabItem Header="SQL Creator" FontSize="14">
                <views:SqlCreatorView/>
            </TabItem>
        </TabControl>

        
    </Grid>
</Window>
